# color deviation from defaults

color id green default
# color blame-id yellow default
color date yellow default
color graph-commit cyan default

bind generic + !git commit --amend
bind main B !git rebase -i %(commit)
bind status P !git push origin
bind status p !git pull origin
bind main <Ctrl-b> !?git rebase -i %(commit)
# bind status <Ctrl-d> !git duet-commit 
bind generic 9 !@sh -c "echo %(commit) | pbcopy"

set main-view-id = true
